$(document).ready(function(){
  <% if @question.errors.present? %>
    <% @question.errors.full_messages.each do |message| %>
        $('.question-errors').html('<%= j message %>');
    <% end %>
  <% else %>
    $('.card-title').html('<%= j @question.title %>')
    $('.card-text').html('<%= j @question.body %>')
    $('form.edit').hide()
  <% end %>
});
